@model List<IdentityWithAhmadRabie.Models.AppUser>
@{
    ViewData["Title"] = "ListUsers";
}

<div class="container m-2">
    <div class="row">
        <div class="col-md-12 pl-2">

            <h3 class=""> All Users  </h3>
            <a class="btn btn-outline-success " asp-action="Register" asp-controller="Account" asp-area="">Create a new  User</a>
            <hr />
        </div>
    
        @if (!Model.Any())
        {
            <h5 class="text-danger">No User Create Yet</h5>
        }
        else
        {
            @foreach (var user in Model)
            {
                <div class="card col-xl-5 m-1 p-0">
                    <div class="card-header">
                       Id: @user.Id
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">User Name: @user.UserName.ToUpper()</h5>

                    </div>
                    <div class="card card-footer ">
                        <div class="row">

                            <a class="btn btn-info m-1 col-md-5 " asp-action="EditUser" asp-controller="Administration" asp-area="Admin" asp-route-id="@user.Id">Edit</a>

                            <!-- from är ett andara sätt att ta bort men det kommer direkt till post
                                
                                pgv method ör post och måste skriva asp-action for att kommer inte påverka 
                                nån annat när jag har skickat id inom asp-route-id =userid 
                                det kommer aldrig att visa på url där uppe 
                                pgv när du skickar nån genom form ska sparas i body inte i url ***
                                -->
                            @*<form asp-action="DeleteUser" method="post" asp-controller="Administration" asp-area="Admin" asp-route-id="@user.Id">
                                <button class="btn btn-danger  m-1 col-md-5" type="submit">Delete</button>
                            </form>*@
                            <a class="btn btn-danger  m-1 col-md-5" asp-action="DeleteUser" asp-controller="Administration" asp-area="Admin" asp-route-id="@user.Id">Delete</a>

                        </div>

                    </div>
                </div>

            }
        }

    </div>
</div>


