@model RoleViewModelUpdate
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>


<div class="container">
    <div class="row">
        <div class="col-12">

            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoleName"></label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                    <input type="hidden" asp-for="Id"/>
                </div>
                <div class="form-group">
                    <button type="submit" class=" btn btn-outline-dark">Update Role </button>
                    <a class="text-primary" asp-action="ListRoles" asp-controller="Administration">Back To List</a>
                </div>
                <br />
                <div class="card">
                    <div class="card-header">
                        <h3>Users in THIS Role</h3>
                    </div>
                    <div class="card-body">
                        @if (Model.Users.Any())
                        {
                            foreach (var user in Model.Users)
                            {
                                <h5>@user</h5>
                            }
                        }
                        else
                        {
                            <h3>this Role dosnt has any User</h3>
                        }
                    </div>
                    <div class="card-footer">

                    
                            <a asp-area="Admin" asp-controller="Administration" asp-route-id="@Model.Id"  asp-action="EdiUserInRole"   class="btn btn-outline-info"> Add or Remove User </a>
                          
                      
                      

                    </div>
                </div>
            </form>
          
        </div>
      
    </div>
   
</div>

