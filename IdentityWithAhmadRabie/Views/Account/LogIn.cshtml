@model IdentityWithAhmadRabie.Models.InputLogIn
@{
    ViewData["Title"] = "LogIn";
}

<h1>LogIn</h1>

<div class="container">
    <div class="row">
        <div class="col-6">

            <form method="post"  class="form-group">
              

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class=" form-text text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class=" form-text text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox"></div>
                    <label asp-for="RememberMe">

                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(x=>x.RememberMe)
                    </label>
                   

                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-dark">LogIn</button>
                </div>
               
                <div class="form-group">
                    <p>
                        <a id="forgot-password" >Forget Your Password</a>
                    </p>
                    <p>
                        <a  asp-controller="Account" asp-action="Register">Register</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}